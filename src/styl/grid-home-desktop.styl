
+largeOnly()
  .grid
    display grid
    position relative
    min-width 960px
    max-width 1620px
    height 99vh
    min-height 800px
    gap 2px

  &._gridV1
    grid-template-columns repeat(9, 1fr);
    grid-template-rows 40% 30% 30%;

    ._item1
      grid-row 1
      grid-column 1 / 5

      .itemImg
        bottom 0
        max-width 39% 
        height 50%
        
      .itemMeta
        padding-right 20%
        z-index 2

    ._item2
      grid-row 1
      grid-column 5 / 10

      .itemImg
        max-width 60%
        height 100%

      .itemMeta
        max-width 60%
        //min-width 400px
        text-align right
        padding-right 6%

    ._item3
      grid-row 2
      grid-column 1 / 6

      .itemImg
        right 20%
        max-width 55%
        height 100%

      .itemMeta
        max-width 50%
        padding-right 6%
    
    ._item4
      grid-row 2
      grid-column 6 / 10

      .itemImg
        min-width 40%
        max-height 65%
        left 10%

      .itemMeta
        padding-right 12%
        max-width 72%
        

    ._item5
      grid-row 3
      grid-column 1 / 4

      .itemImg
        max-height 60%
        width 100%

      .itemMeta
        position absolute
        left 6%
        top 12%

    ._item6
      grid-row 3
      grid-column 4 / 7

      .itemImg
        max-width 50%
        height 100%

      .itemMeta
        text-align right
        padding-right 6%
        

    ._item7
      grid-row 3
      grid-column 7 / 10

      .itemImg
        width 45%
        height 65%

      .itemMeta
        margin-left 6%
        margin-left 6%

  .gridItem 
    position relative
    display grid

    > *
      box-sizing border-box

    .itemImg
      position absolute
      border-radius 0px
      opacity 0.35
      object-fit cover
      z-index 1
      max-height 100%
      max-width 100%
      transition all 300ms

    .itemMeta
      padding-bottom 6%
      position relative
      z-index 2
      
      &:after
        content ' '
        display block
        position absolute
        bottom 10px
        height 4px
        width 36px
        background rgba(sh000, 0.3)
        transition all 300ms
        left 0

    &:hover,
    &:active
      .itemImg
        border-radius 12px
        opacity 0.7

      .itemMeta:after
        border-radius 6px
        background rgba(or400, 1)
        height 10px
        left 35px
      
    
