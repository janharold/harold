@import 'reset'
@import 'breakpoints'
@import 'colors'
@import 'font-face'
@import 'spacing'

body 
  background-color sh900
  color sh000
  font-family 'ArticulatCF Regular', Helvetica Neue, Helvetica, Arial, sans-serif
  font-size 18px

a
  transition all 350ms ease-in-out

.logo
  bottom 110px
  left -45px
  position fixed
  transform rotate(270deg)
  max-width 170px
  
  +mediumLarge()
    bottom 120px
    left -60px
    max-width 220px
    


.siteNavigation
  .navTrigger,
  .navTriggerIcon
    display none
    
  +smallOnly()
    position fixed
    bottom 35%
    width 70%
    
    .navTrigger,
    .navTriggerIcon
      bottom 0px 
      //border 1px solid red
      display flex
      height 45px
      margin-left 0
      position absolute
      width 60px
    
    .navTrigger
      cursor pointer
      opacity 0
      z-index 3

    .navTriggerIcon
      background-color or500
      padding sMedium
      z-index 2
      transition all 350ms ease-in-out
    
    .navTriggerIcon img
      transition all 350ms ease-in-out
    
    
    .navTrigger:checked,
    .navTrigger:checked + .navTriggerIcon
      margin-left 100%
      
    .navTrigger:checked + .navTriggerIcon img
      transform rotate(180deg)
      
    .navTrigger:checked ~ ul
      margin-left 0

    ul
      width 100%
      background-color or500
      transition all 350ms ease-in-out
      margin 0
      padding sSmall sNormal
      margin-left -100%
  
    a:active,
    a.active
      background-color sh000
      color or500
      
    
  a
    color sh000
    font-family 'Bergen Mono Regular'
    text-decoration none
    display block
    padding sNormal sMedium
    margin sSmall 0
    

      

  li 
    list-style none
  // Desktop
    
  +largeOnly()
    ul
      margin sLarge 0 0 
      padding 0
    
    a
      padding-left sXLarge
    a.active
      color or500
      border-left 8px solid or500
      padding-left sXLarge - 10px
  